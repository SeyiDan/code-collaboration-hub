# Code Collaboration Hub Environment Variables
# Copy this file to .env and update the values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
# For PostgreSQL (recommended)
DATABASE_URL=postgresql://username:password@localhost/codecollaboration

# For SQLite (development only)
# DATABASE_URL=sqlite:///codecollaboration.db

# Redis Configuration (for real-time features)
REDIS_URL=redis://localhost:6379

# SocketIO Configuration
SOCKETIO_ASYNC_MODE=gevent
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security
WTF_CSRF_ENABLED=True

# Application Settings
MAX_CONTENT_LENGTH=50331648  # 48MB max file size
COLLABORATION_TIMEOUT=300    # 5 minutes
MAX_USERS_PER_PROJECT=10
